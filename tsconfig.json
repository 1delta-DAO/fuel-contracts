{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["ts-scripts", "ts-scripts/utils", "env.ts"],
  "exclude": ["node_modules"]
}
